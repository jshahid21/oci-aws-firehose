# OCI-to-AWS Sync - Copy to terraform.tfvars and customize

region       = "us-ashburn-1"
tenancy_ocid = "ocid1.tenancy.oc1..aaaa..."

# Greenfield: create_* = true. Brownfield: create_* = false, set existing_*_id
create_compartment       = false
existing_compartment_id  = "ocid1.compartment.oc1..aaaa..."
create_vcn               = true
create_subnet            = true
create_nat_gateway       = true
create_service_gateway   = true
create_vault             = true
create_key               = true
create_aws_secrets       = true

# When create_aws_secrets = true, add after first apply:
# aws_access_key = "AKIA..."
# aws_secret_key = "your-secret"

# Optional: instance_shape = "VM.Standard.A1.Flex" for free tier; instance_ocpus / instance_memory_gb for sizing

aws_s3_bucket_name = "my-aws-cost-reports"
aws_s3_prefix      = "oci-sync"
aws_region         = "us-east-1"
